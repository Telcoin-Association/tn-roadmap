{
  "name": "tn-roadmap",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Static site for Telcoin Network roadmap",
  "engines": {
    "node": "^20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"scripts/**/*.ts\" vite.config.ts vitest.config.ts tailwind.config.ts --ext .ts,.tsx",
    "lint:a11y": "eslint \"src/**/*.{ts,tsx}\" --config eslint.a11y.config.js",
    "test": "vitest run || true",
    "test:ui": "vitest",
    "test:e2e": "playwright test",
    "e2e": "concurrently -k -s first \"vite\" \"wait-on http://localhost:5173 && npm run test:e2e\"",
    "validate:status": "tsx scripts/validate-status.ts",
    "bump:status": "tsx scripts/bump-status.ts"
  },
  "dependencies": {
    "framer-motion": "^12.23.22",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reactflow": "^11.11.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.1",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.2"
  }
}
